{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "COVID-19 Active Cases (10 Oct 2020)",
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/rbur0007/vis_2_test/main/CP_map_shape.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/rbur0007/vis_2_test/main/launches_per_country.csv"
        },
        "key": "country",
        "fields": ["launches"]
      }
    },
    {"calculate": "datum.count", "as": "No. Launches"}
  ],
  "projection": {"type": "equalEarth"},
  "mark": {"type": "geoshape", "stroke": "black"},
  "encoding": {
    "color": {"field": "launches", "type": "quantitative"},
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "launches", "type": "quantitative", "title": "Total Launches"}
    ]
  },
  "config": {}
}