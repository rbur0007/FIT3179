{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/rbur0007/vis_2_test/main/top5_companies_decade_grouping_2.csv"
  },
  "height": 120,
  "width": 250,
  "mark": "bar",
  "encoding": {
    "column": {"field": "decade", "type": "ordinal", "spacing": 10},
    "x": {
      "aggregate": "sum",
      "field": "count",
      "title": "Total Launches",
      "axis": {"grid": false},
      "scale": {"domain": [0, 800]}
    },
    "y": {"field": "CM", "axis": {"title": ""}},
    "color": {
      "field": "CM",
      "scale": {"scheme": "category20b"},
      "sort": ["RVSN USSR", "Arianespace", "General Dynamics"]
    },
    "tooltip": [
      {"field": "CM", "type": "nominal", "title": "Company"},
      {"field": "decade", "type": "nominal", "title": "Decade"},
      {
        "aggregate": "sum",
        "field": "count",
        "type": "quantitative",
        "title": "Total Launches"
      }
    ]
  },
  "config": {"view": {"stroke": "transparent"}, "axis": {"domainWidth": 1}}
}